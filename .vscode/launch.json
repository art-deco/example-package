  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/node_modules/zoroaster/depack/bin/zoroaster.js",
      "env": {
        // "NODE_DEBUG": "@artdeco/example-package",
      },
      "console": "integratedTerminal",
      "args": [
        "test/spec",
        "test/mask",
        "-a", "-w", "-t", "9999999"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Example",
      "program": "${workspaceFolder}/node_modules/alamode/build/alanode.js",
      "console": "integratedTerminal",
      "args": [
        "example"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}